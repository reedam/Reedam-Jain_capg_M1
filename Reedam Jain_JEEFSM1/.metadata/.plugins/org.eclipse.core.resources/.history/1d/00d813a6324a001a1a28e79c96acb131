package com.cpg.practicequestion.exercise3;

public class StringRepeatFront {
	
	
	
	String repeat(String str,int n)
	{
		int i=0;
		int len=str.length();
		StringBuilder sb=new StringBuilder();
		
		while(n!=0)
		{
			sb.append(str.substring(0,n-i));
			i++;
			n--;
		}
		return sb.toString();
	}

}
